<div class="new">
  <h1>New article</h1>
  <%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <%= f.submit class: 'btn btn-primary mt-3 mb-3'%>
  <% end %>
  <span>
    <%= link_to "Back to list", articles_path %>
  </span>
</div>
