<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<%= link_to edit_article_path(@article) do %><i class="fas fa-pencil-alt"></i><% end %>

<%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete '#{@article.title}' ?" } do %>
<i class="far fa-trash-alt"></i>
<% end %>

<%= link_to "Back to list", articles_path %>
