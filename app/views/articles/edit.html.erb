<h1>Editing article</h1>
<%= form_for(@article) do |f| %>
<%= f.label :title %>
<%= f.text_field :title, class: 'form-control' %>
<%= f.label :content %>
<%= f.text_field :content, class: 'form-control' %>
<%= f.submit class: 'btn btn-primary'%>
<% end %>
<span>
  <%= link_to "Back to list", articles_path %>
</span>
